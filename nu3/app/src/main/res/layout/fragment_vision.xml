<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.VisionFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:scaleType="fitCenter"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:id="@+id/imageView1"
            android:src="@drawable/background_mision" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mision"
            android:paddingLeft="20dp"
            android:paddingRight="20dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:scaleType="fitCenter"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="15dp"
            android:id="@+id/imageView2"
            android:src="@drawable/background_vision" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/vision"
            android:paddingLeft="20dp"
            android:paddingRight="20dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:scaleType="fitCenter"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="15dp"
            android:id="@+id/imageView3"
            android:src="@drawable/background_values" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/values"
            android:paddingLeft="20dp"
            android:paddingRight="20dp" />
    </LinearLayout>
</ScrollView>
